@model WebsiteMathTasks.Models.Task
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer
@{
    ViewBag.Title = "Delete";
}

<div>
    <dl class="dl-horizontal">
        <dt>@localizer["Title"]</dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt>@localizer["Description"]</dt>
        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt>@localizer["Theme"]</dt>
        <dd>
            @Html.DisplayFor(model => model.Theme)
        </dd>
        <dt>@localizer["Tag"]</dt>
        <dd>
            @Html.DisplayFor(model => model.Tag)
        </dd>
    </dl>

    <div>
        <form asp-controller="home" asp-action="delete" method="post">
            <div class="form-group">
                <input type="submit" class="btn btn-outline-primary" role="button" value=@localizer["Confirm delete"] />
            </div>
        </form>
    </div>
</div>