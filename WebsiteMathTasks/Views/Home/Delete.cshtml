@model WebsiteMathTasks.Models.Task
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer
@{
    ViewBag.Title = "Delete";
}

<div>
    <dl class="dl-horizontal">
        <dt>@localizer["Title"]</dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt>@localizer["Сondition"]</dt>
    <dd>
            @Html.DisplayFor(model => model.Сondition)
        </dd>
        <dt>@localizer["Theme"]</dt>
        <dd>
            @Html.DisplayFor(model => model.theme)
        </dd>
        <dt>@localizer["Tag"]</dt>
        <dd>
            @Html.DisplayFor(model => model.tag)
        </dd>
    </dl>

    <div>
        <form asp-controller="Home" asp-action="Delete" method="post">
            <div class="form-group">
                <input type="submit" class="btn btn-default" value=@localizer["Confirm delete"] />
            </div>
        </form>
    </div>
